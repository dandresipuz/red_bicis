extends ../layout

block content

    .container

        nav(style="--bs-breadcrumb-divider: '>';" aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item
                a(href='/bicicletas') Bicicletas/
                li.breadcrumb-item.active(aria-current='page') Agregar bicicleta


        h1
            span.badge.bg-secondary Nueva Bicicleta

        form(action="/bicicletas/create" method="post")

            label(for='id') ID
            input#id.form-control(type='text' name='id')
            label(for='color') Color
            input#color.form-control(type='text' name='color')
            label(for='modelo') Modelo
            input#modelo.form-control(type='text' name='modelo')
            label(for='lat') Latitud
            input#lat.form-control(type='text' name='lat')
            label(for='long') Longitud
            input#long.form-control(type='text' name='long')

            button.btn.btn-primary(type='submit') +  Agregar
