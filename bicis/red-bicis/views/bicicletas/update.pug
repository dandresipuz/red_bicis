extends ../layout

block content

    .container

        nav(style="--bs-breadcrumb-divider: '>';" aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item
                a(href='/bicicletas') Bicicletas/
                li.breadcrumb-item.active(aria-current='page') Actualizando bicicleta


        h1
            span.badge.bg-secondary Actualizar Bicicleta

        form(action=`/bicicletas/${bici.id}/update` method="post")

            label(for='id') ID
            input#id.form-control(type='text' name='id' value= bici.id)
            label(for='color') Color
            input#color.form-control(type='text' name='color' value= bici.color)
            label(for='modelo') Modelo
            input#modelo.form-control(type='text' name='modelo' value= bici.modelo)
            label(for='lat') Latitud
            input#lat.form-control(type='text' name='lat' value= bici.ubicacion[0])
            label(for='long') Longitud
            input#long.form-control(type='text' name='long' value= bici.ubicacion[1])

            button.btn.btn-primary(type='submit') +  Agregar
